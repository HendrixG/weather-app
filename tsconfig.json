{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,            
    "resolveJsonModule": true,
    "isolatedModules": true,    
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"                  
  ],
  "exclude": [
    "node_modules"
  ]
}

